<Window x:Class="aoci_lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aoci_lab4"
        mc:Ignorable="d"
        Title="Лабораторная работа #3" Height="600" Width="820">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <StackPanel Margin="5">

                <Button Content="Открыть изображение" Click="LoadImage_Click" Margin="0,0,0,5" FontWeight="Bold"/>
                <Button Content="Сохранить изображение" Click="SaveImage_Click" Margin="0,0,0,20" FontWeight="Bold"/>
                <Button Content="Применить изменения" Click="UpdateImage_Click" Margin="0,0,0,5"/>
                <Button Content="Сбросить" Click="Clear_Click" Margin="0,0,0,20"/>

                <Border BorderBrush="DimGray" BorderThickness="1" Margin="5">
                    <StackPanel Margin="5">

                        <Label Content="Оконные фильтры" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <Button Content="Размытие" Click="BoxBlur_Click" Margin="0,5,0,0"/>
                        <Button Content="Размытие по Гауссу" Click="GaussianBlur_Click" Margin="0,5,0,0"/>
                        <Button Content="Повышение резкости" Click="Sharpen_Click" Margin="0,5,0,5"/>
                        
                        <Button Content="Выделение границ X" Click="SobelX_Click" Margin="0,5,0,0"/>
                        <Button Content="Выделение границ Y" Click="SobelY_Click" Margin="0,5,0,0"/>
                        <Button Content="Выделение границ X+Y" Click="SobelXY_Click" Margin="0,5,0,10"/>

                        <Label Content="Кастомный фильтр" FontWeight="Bold" HorizontalAlignment="Center"/>

                        <Border BorderBrush="DimGray" BorderThickness="1" Margin="5">
                        </Border>
                        
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </Border>

        <Border Grid.Column="1" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <Image Name="MainImage"  Margin="5" Stretch="Uniform"/>
        </Border>
        
    </Grid>
</Window>
